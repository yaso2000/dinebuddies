rules_version = '2';

// Firebase Storage Security Rules for DineBuddies
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Avatar images
    match /avatars/{userId}_{timestamp}.jpg {
      // Anyone can read avatars
      allow read: if true;
      
      // Only authenticated users can upload their own avatar
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId
                   && isValidSize()
                   && isImage();
    }
    
    // Invitation photos
    match /invitations/{invitationId}/{filename} {
      // Anyone can read invitation photos
      allow read: if true;
      
      // Only authenticated users can upload invitation photos
      allow write: if isAuthenticated()
                   && isValidSize()
                   && isImage();
    }
    
    // Restaurant photos (future use)
    match /restaurants/{restaurantId}/{filename} {
      allow read: if true;
      allow write: if isAuthenticated()
                   && isValidSize()
                   && isImage();
    }
    
    // Business profile images (cover & logo)
    match /businesses/{userId}/{filename} {
      // Anyone can read business images
      allow read: if true;
      
      // Only the business owner can upload/update their images
      allow write: if isAuthenticated()
                   && request.auth.uid == userId
                   && isValidSize()
                   && isImage();
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
